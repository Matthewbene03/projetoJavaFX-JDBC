<VBox prefHeight="485.0" prefWidth="762.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.FuncionarioListController">
   <children>
      <Label prefHeight="122.0" prefWidth="393.0" text="Registro de funcionarios">
         <font>
            <Font size="24.0" />
         </font>
         <padding>
            <Insets left="20.0" top="30.0" />
         </padding>
      </Label>
      <ToolBar prefHeight="40.0" prefWidth="755.0">
        <items>
          <Button fx:id="btNew" mnemonicParsing="false" onAction="#onBtNewAction" text="New Funcionario" />
